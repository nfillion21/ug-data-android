<resources>

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.UGData" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ugdata_green_900</item>
        <item name="colorOnPrimary">@color/ugdata_yellow_300</item>
        <item name="colorPrimaryDark">@color/ugdata_gray_50_a600</item>
        <item name="colorOnSurface">@color/ugdata_white</item>
        <item name="colorAccent">@color/ugdata_green_300</item>
        <item name="colorSurface">@color/ugdata_green_900</item>
        <item name="colorSecondary">@color/ugdata_yellow_300</item>
        <item name="android:colorBackground">@color/ugdata_green_900</item>
    </style>

    <style name="Theme.UGData" parent="Base.Theme.UGData"/>

    <style name="Theme.UGData.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UGData.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.UGData.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>
